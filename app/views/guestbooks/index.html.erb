<table>
  <tr>
    <th>Title</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Comment</th>
  </tr>

<% @guestbooks.each do |guestbook| %>
  <tr>
    <td><%=h guestbook.title %></td>
    <td><%=h guestbook.firstname %></td>
    <td><%=h guestbook.lastname %></td>
    <td><%=h guestbook.email %></td>
    <td><%=h truncate(guestbook.comment.gsub(/<.*?>/,''), 30) %></td>
    <td class="pagination"><%= link_to 'Show', guestbook %></td>
    <td class="pagination"><%= link_to 'Edit', edit_guestbook_path(guestbook) %></td>
    <td class="pagination"><%= link_to 'Destroy', guestbook, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="pagination">
  <%= will_paginate @guestbooks %>
</div>

<div class="return_link">
  <%= link_to 'Back to the donate page', donate_path %>
</div>